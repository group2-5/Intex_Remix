@{
    ViewData["Title"] = "Add Desert Burial Record";
}

@model Main

<h1>@ViewData["Title"]</h1>

<br />

<!--Build out a form to input findings, using asp-for to link the labels and inputs to fields from the model-->
<form asp-action="AddDesertBurial" method="post">
    <div class="row m-2">
        <div class="col-4">
            <h4>Location Information</h4>
            <div class="card border-dark p-2">
                <!--Burial ID field not in form, will be auto-generated based on entered information-->
                <div>
                    <label asp-for="BurialLocationNs">Burial Location (N/S):</label>
                    <!--Drop Down Menu-->
                    <select asp-for="BurialLocationNs">
                        <option value="N">North</option>
                        <option value="S">South</option>
                    </select>
                </div>

                <div>
                    <label asp-for="BurialLocationEw">Burial Location (E/W):</label>
                    <!--Drop Down Menu-->
                    <select asp-for="BurialLocationEw">
                        <option value="E">East</option>
                        <option value="W">West</option>
                    </select>
                </div>

                <div>
                    <label asp-for="LowPairNs">Low Pair (N/S):</label>
                    <input asp-for="LowPairNs" />
                </div>

                <div>
                    <label asp-for="HighPairNs">High Pair (N/S):</label>
                    <input asp-for="HighPairNs" />
                </div>

                <div>
                    <label asp-for="LowPairEw">Low Pair (E/W):</label>
                    <input asp-for="LowPairEw" />
                </div>

                <div>
                    <label asp-for="HighPairEw">High Pair (E/W):</label>
                    <input asp-for="HighPairEw" />
                </div>

                <div>
                    <label asp-for="BurialSubplot">Burial Subplot:</label>
                    <select asp-for="BurialSubplot">
                        <option value="SE">Southeast</option>
                        <option value="SW">Southwest</option>
                        <option value="NE">Northeast</option>
                        <option value="NW">Northwest</option>
                    </select>
                </div>

                <div>
                    <label asp-for="BurialNumber">Burial Number:</label>
                    <input asp-for="BurialNumber" />
                </div>
            </div>

            <h4>Burial Situation</h4>
            <div class="card border-dark p-2">
                <div>
                    <label asp-for="BurialDepth">Burial Depth (meters):</label>
                    <input asp-for="BurialDepth" />
                </div>

                <div>
                    <label asp-for="SouthToHead">South to Head (meters):</label>
                    <input asp-for="SouthToHead" />
                </div>

                <div>
                    <label asp-for="SouthToFeet">South to Feet (meters):</label>
                    <input asp-for="SouthToFeet" />
                </div>

                <div>
                    <label asp-for="WestToHead">West to Head (meters):</label>
                    <input asp-for="WestToHead" />
                </div>

                <div>
                    <label asp-for="WestToFeet">West to Feet (meters):</label>
                    <input asp-for="WestToFeet" />
                </div>

                <div>
                    <label asp-for="BurialSituation">Burial Situation:</label>
                    <input asp-for="BurialSituation" />
                </div>

                <div>
                    <label asp-for="LengthOfRemains">Length of Remains (meters):</label>
                    <input asp-for="LengthOfRemains" />
                </div>

                <div>
                    <label asp-for="SampleNumber">Sample Number:</label>
                    <input asp-for="SampleNumber" />
                </div>

            </div>



            <h4>Year</h4>
            <div class="card border-dark p-2">
                <div>
                    <label asp-for="YearFound">Year Found:</label>
                    <input asp-for="YearFound" />
                </div>

                <div>
                    <label asp-for="MonthFound">Month Found:</label>
                    <select asp-for="MonthFound">
                        <option value="Jan">January</option>
                        <option value="Feb">February</option>
                        <option value="Mar">March</option>
                        <option value="Apr">April</option>
                        <option value="May">May</option>
                        <option value="Jun">June</option>
                        <option value="Jul">July</option>
                        <option value="Aug">August</option>
                        <option value="Sep">September</option>
                        <option value="Oct">October</option>
                        <option value="Nov">November</option>
                        <option value="Dec">December</option>
                    </select>
                </div>

                <div>
                    <label asp-for="DayFound">Day Found:</label>
                    <select asp-for="DayFound">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                        <option value="7">7</option>
                        <option value="8">8</option>
                        <option value="9">9</option>
                        <option value="10">10</option>
                        <option value="11">11</option>
                        <option value="12">12</option>
                        <option value="13">13</option>
                        <option value="14">14</option>
                        <option value="15">15</option>
                        <option value="16">16</option>
                        <option value="17">17</option>
                        <option value="18">18</option>
                        <option value="19">19</option>
                        <option value="20">20</option>
                        <option value="21">21</option>
                        <option value="22">22</option>
                        <option value="23">23</option>
                        <option value="24">24</option>
                        <option value="25">25</option>
                        <option value="26">26</option>
                        <option value="27">27</option>
                        <option value="28">28</option>
                        <option value="29">29</option>
                        <option value="30">30</option>
                        <option value="31">31</option>
                    </select>
                </div>

                <div>
                    <label asp-for="HeadDirection">Head Direction:</label>
                    <select asp-for="HeadDirection">
                        <option value="East">East</option>
                        <option value="West">West</option>
                    </select>
                </div>
            </div>

            <h4>Mummy Characteristics</h4>
            <div class="card border-dark p-2">
                <div>
                    <label asp-for="GenderGe">Gender GE:</label>
                    <select asp-for="GenderGe">
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Undetermined">Undetermined</option>
                    </select>
                </div>

                <div>
                    <label asp-for="GeFunctionTotal">GE Function Total:</label>
                    <input asp-for="GeFunctionTotal" />
                </div>

                <div>
                    <label asp-for="GenderBodyCol">Gender Body Col:</label>
                    <select asp-for="GenderBodyCol">
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Undetermined">Undetermined</option>
                    </select>
                </div>

                <div>
                    <label asp-for="HairColor">Hair Color:</label>
                    <select asp-for="HairColor">
                        <option value="Brown">Brown</option>
                        <option value="Black">Black</option>
                        <option value="Blonde">Blonde</option>
                        <option value="Red">Red</option>
                        <option value="Brown Red">Brown Red</option>
                        <option value="Red Blonde">Red Blonde</option>
                    </select>
                </div>

                <div>
                    <label asp-for="PreservationIndex">Preservation Index:</label>
                    <select asp-for="PreservationIndex">
                        <option value="I">Only Bones</option>
                        <option value="II">5-25% Tissue and/or Textiles</option>
                        <option value="III">50% or Less Tissue and/or Textiles</option>
                        <option value="IV">75% or Less Tissue and/or Textiles</option>
                        <option value="V">76% and Above Tissue and/or Textiles</option>
                    </select>

                    <div>
                        <label asp-for="EstimateAge">Estimate Age:</label>
                        <input asp-for="EstimateAge" />
                    </div>

                    <div>
                        <label asp-for="EstimateLivingStature">Estimate Living Stature (centimeters):</label>
                        <input asp-for="EstimateLivingStature" />
                    </div>

                    <div>
                        <label asp-for="ToothAttrition">Tooth Attrition:</label>
                        <select asp-for="ToothAttrition">
                            <option value="I">No Wear</option>
                            <option value="II">Some Wear</option>
                            <option value="III">Medium Wear</option>
                            <option value="IV">Significant Wear</option>
                            <option value="V">Flat</option>
                        </select>
                    </div>

                    <div>
                        <label asp-for="ToothEruption">Tooth Eruption:</label>
                        <input asp-for="ToothEruption" />
                    </div>

                    <div>
                        <label asp-for="PathologyAnomalies">Pathology Anomalies:</label>
                        <input asp-for="PathologyAnomalies" />
                    </div>
                </div>
            </div>

            <h4>Taken</h4>
            <div class="card border-dark p-2">
                <div>
                    <label asp-for="HairTaken">Hair Taken:</label>
                    <select asp-for="HairTaken">
                        <option value="">Select One</option>
                        <option value="TRUE">True</option>
                        <option value="FALSE">False</option>
                    </select>
                </div>

                <div>
                    <label asp-for="SoftTissueTaken">Soft Tissue Taken:</label>
                    <select asp-for="SoftTissueTaken">
                        <option value="">Select One</option>
                        <option value="TRUE">True</option>
                        <option value="FALSE">False</option>
                    </select>
                </div>

                <div>
                    <label asp-for="BoneTaken">Bone Taken:</label>
                    <select asp-for="BoneTaken">
                        <option value="">Select One</option>
                        <option value="TRUE">True</option>
                        <option value="FALSE">False</option>
                    </select>
                </div>

                <div>
                    <label asp-for="ToothTaken">Tooth Taken:</label>
                    <select asp-for="ToothTaken">
                        <option value="">Select One</option>
                        <option value="TRUE">True</option>
                        <option value="FALSE">False</option>
                    </select>
                </div>

                <div>
                    <label asp-for="TextileTaken">Textile Taken:</label>
                    <select asp-for="TextileTaken">
                        <option value="">Select One</option>
                        <option value="TRUE">True</option>
                        <option value="FALSE">False</option>
                    </select>
                </div>

                <div>
                    <label asp-for="DescriptionOfTaken">Description Of Taken:</label>
                    <input asp-for="DescriptionOfTaken" />
                </div>

                <div>
                    <label asp-for="ArtifactFound">Artifact Found:</label>
                    <select asp-for="ArtifactFound">
                        <option value="">Select One</option>
                        <option value="TRUE">True</option>
                        <option value="FALSE">False</option>
                    </select>
                </div>

                <div>
                    <label asp-for="ArtifactsDescription">Artifacts Description:</label>
                    <input asp-for="ArtifactsDescription" />
                </div>
            </div>

        </div>
        <div class="col-8">
            <img class="rounded mx-auto d-block img-fluid" src="~/FagelGamous.jpg" />
            <br />
            <h4>Body Descriptions</h4>
            <div class="card border-dark p-2">
                <div class="row">
                    <div class="col-6">
                        <div>
                            <label asp-for="BasilarSuture">Basilar Suture:</label>
                            <select asp-for="BasilarSuture">
                                <option value="Open">Open</option>
                                <option value="Closed">Closed</option>
                            </select>
                        </div>

                        <div>
                            <label asp-for="VentralArc">Ventral Arc:</label>
                            <select asp-for="VentralArc">
                                <option value="0">No Data</option>
                                <option value="1">Minimal Arc</option>
                                <option value="2">Intermediate Arc</option>
                                <option value="3">Maximum Arc</option>
                            </select>
                        </div>

                        <div>
                            <label asp-for="SubpubicAngle">Subpubic Angle:</label>
                            <select asp-for="SubpubicAngle">
                                <option value="0">No Data</option>
                                <option value="1">Minimal Angle</option>
                                <option value="2">Intermediate Angle</option>
                                <option value="3">Maximum Angle</option>
                            </select>
                        </div>

                        <div>
                            <label asp-for="SciaticNotch">Sciatic Notch:</label>
                            <select asp-for="SciaticNotch">
                                <option value="0">No Data</option>
                                <option value="1">Narrow Notch</option>
                                <option value="2">Intermediate Notch</option>
                                <option value="3">Wide Angle</option>
                            </select>
                        </div>

                        <div>
                            <label asp-for="PubicBone">Pubic Bone:</label>
                            <select asp-for="PubicBone">
                                <option value="0">No Data</option>
                                <option value="1">Minimal</option>
                                <option value="2">Intermediate</option>
                                <option value="3">Maximal</option>
                            </select>
                        </div>

                        <div>
                            <label asp-for="PreaurSulcus">Preaur Sulcus:</label>
                            <select asp-for="PreaurSulcus">
                                <option value="0">No Data</option>
                                <option value="1">Minimal</option>
                                <option value="2">Intermediate</option>
                                <option value="3">Maximal</option>
                            </select>
                        </div>

                        <div>
                            <label asp-for="MedialIpRamus">Medial IP Ramus:</label>
                            <select asp-for="MedialIpRamus">
                                <option value="0">No Data</option>
                                <option value="1">Minimal</option>
                                <option value="2">Intermediate</option>
                                <option value="3">Maximal</option>
                            </select>
                        </div>

                        <div>
                            <label asp-for="DorsalPitting">Dorsal Pitting:</label>
                            <select asp-for="DorsalPitting">
                                <option value="0">No Data</option>
                                <option value="1">Minimal</option>
                                <option value="2">Intermediate</option>
                                <option value="3">Maximal</option>
                            </select>
                        </div>

                        <div>
                            <label asp-for="ForemanMagnum">Foreman Magnum:</label>
                            <input asp-for="ForemanMagnum" />
                        </div>

                        <div>
                            <label asp-for="FemurHead">Femur Head (centimeters):</label>
                            <input asp-for="FemurHead" />
                        </div>

                        <div>
                            <label asp-for="HumerusHead">Humerus Head (centimeters):</label>
                            <input asp-for="HumerusHead" />
                        </div>

                        <div>
                            <label asp-for="Osteophytosis">Osteophytosis:</label>
                            <input asp-for="Osteophytosis" />
                        </div>

                        <div>
                            <label asp-for="PubicSymphysis">Pubic Symphasis:</label>
                            <select asp-for="PubicSymphysis">
                                <option value="I">I</option>
                                <option value="II">II</option>
                                <option value="III">III</option>
                                <option value="IV">IV</option>
                                <option value="V">V</option>
                            </select>
                        </div>

                        <div>
                            <label asp-for="FemurLength">Femur Length (centimeters):</label>
                            <input asp-for="FemurLength" />
                        </div>

                        <div>
                            <label asp-for="HumerusLength">Humerus Length (centimeters):</label>
                            <input asp-for="HumerusLength" />
                        </div>

                        <div>
                            <label asp-for="TibiaLength">TibiaLength (centimeters):</label>
                            <input asp-for="TibiaLength" />
                        </div>

                        <div>
                            <label asp-for="Robust">Robust:</label>
                            <select asp-for="Robust">
                                <option value="0">No Data</option>
                                <option value="1">Petite</option>
                                <option value="2">Intermediate</option>
                                <option value="3">Robust</option>
                            </select>
                        </div>

                        <div>
                            <label asp-for="SupraorbitalRidges">Supraorbital Ridges:</label>
                            <select asp-for="SupraorbitalRidges">
                                <option value="0">No Data</option>
                                <option value="1">Petite</option>
                                <option value="2">Intermediate</option>
                                <option value="3">Robust</option>
                            </select>
                        </div>

                        <div>
                            <label asp-for="OrbitEdge">Orbit Edge:</label>
                            <select asp-for="OrbitEdge">
                                <option value="0">No Data</option>
                                <option value="1">Sharp</option>
                                <option value="2">Intermediate</option>
                                <option value="3">Rounded</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-6">
                        <div>
                            <label asp-for="ParietalBossing">Parietal Bossing:</label>
                            <select asp-for="ParietalBossing">
                                <option value="0">No Data</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                            </select>
                        </div>

                        <div>
                            <label asp-for="Gonian">Gonian:</label>
                            <select asp-for="Gonian">
                                <option value="0">No Data</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                            </select>
                        </div>

                        <div>
                            <label asp-for="NuchalCrest">Nuchal Crest:</label>
                            <select asp-for="NuchalCrest">
                                <option value="0">No Data</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                            </select>
                        </div>

                        <div>
                            <label asp-for="ZygomaticCrest">Zygomatic Crest:</label>
                            <select asp-for="ZygomaticCrest">
                                <option value="0">No Data</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                            </select>
                        </div>

                        <div>
                            <label asp-for="CranialSuture">Cranial Suture:</label>
                            <select asp-for="CranialSuture">
                                <option value="Open">Open</option>
                                <option value="Closed">Closed</option>
                            </select>
                        </div>

                        <div>
                            <label asp-for="MaximumCranialLength">Maximum Cranial Length (centimeters):</label>
                            <input asp-for="MaximumCranialLength" />
                        </div>

                        <div>
                            <label asp-for="MaximumCranialBreadth">Maximum Cranial Breadth (centimeters):</label>
                            <input asp-for="MaximumCranialBreadth" />
                        </div>

                        <div>
                            <label asp-for="BasionBregmaHeight">Basion Bregma Height (centimeters):</label>
                            <input asp-for="BasionBregmaHeight" />
                        </div>

                        <div>
                            <label asp-for="BasionNasion">Basion Nasion (centimeters):</label>
                            <input asp-for="BasionNasion" />
                        </div>

                        <div>
                            <label asp-for="BasionProsthionLength">Basion Prosthion Length (centimeters):</label>
                            <input asp-for="BasionProsthionLength" />
                        </div>

                        <div>
                            <label asp-for="BizygomaticDiameter">Bizygomatic Diameter (centimeters):</label>
                            <input asp-for="BizygomaticDiameter" />
                        </div>

                        <div>
                            <label asp-for="NasionProsthion">Nasion Prosthion (centimeters):</label>
                            <input asp-for="NasionProsthion" />
                        </div>

                        <div>
                            <label asp-for="MaximumNasalBreadth">Maximum Nasal Breadth (centimeters):</label>
                            <input asp-for="MaximumNasalBreadth" />
                        </div>

                        <div>
                            <label asp-for="InterorbitalBreadth">Interorbital Breadth (centimeters):</label>
                            <input asp-for="InterorbitalBreadth" />
                        </div>

                        <div>
                            <label asp-for="EpiphysealUnion">Epiphyseal Union:</label>
                            <select asp-for="EpiphysealUnion">
                                <option value="">Select One</option>
                                <option value="Yes">Yes</option>
                                <option value="No">No</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <br />

            <img class="rounded mx-auto d-block img-fluid" src="~/fagelGamous2.jpg" />
        </div>
    </div>
    <br /><br /><br />

    <div class="text-center">
        <button type="submit" class="p-2">Submit Record</button>
    </div>

    <!--Helps user know what fields they are missing inputs on/what needs to be filled out-->
    <div asp-validation-summary="All"></div>

</form>
