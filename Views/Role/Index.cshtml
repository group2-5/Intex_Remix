@model IEnumerable<IdentityRole>

<div class="container">
    <h1 class="bg-dark text-white text-center">All Roles</h1>

    <table class="table table-sm table-bordered table-bordered">
        <tr><th class="text-center">ID</th><th class="text-center">Name</th><th class="text-center">Update</th><th class="text-center">Delete</th></tr>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td class="text-center">@role.Name</td>
                <td class="text-center"><a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@role.Id">Update</a></td>
                <td class="text-center">
                    <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
    <a asp-action="UserIndex" class="btn btn-secondary">Manage Users</a>
    <a asp-action="Create" class="btn btn-secondary">Create a Role</a>

</div>

