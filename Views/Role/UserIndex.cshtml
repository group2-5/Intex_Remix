@model IEnumerable<IdentityUser>
    <h1 class="bg-info text-white">All Users</h1>
<table class="table table-sm table-bordered table-bordered">
    <tr><th>ID</th><th>Email</th><th>Delete</th></tr>
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Id</td>
            <td>@role.Email</td>
            <td>
                <form asp-action="DeleteUser" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<a asp-action="Index" class="btn btn-secondary">Promote/Demote Users</a>

