@model IEnumerable<IdentityUser>

<div class="container">
    <h1 class="bg-dark text-white text-center">All Users</h1>
    <table class="table table-sm table-bordered table-bordered">
        <tr><th class="text-center">ID</th><th class="text-center">Email</th><th class="text-center">Delete</th></tr>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td class="text-center">@user.Email</td>
                <td class="text-center">
                    <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
    <a asp-action="Index" class="btn btn-secondary">Promote/Demote Users</a>
</div>  
